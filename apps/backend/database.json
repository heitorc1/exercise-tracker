{
  "defaultEnv": "local",
  "local": {
    "driver": "pg",
    "host": "localhost",
    "port": 5432,
    "user": { "ENV": "DB_USER" },
    "password": { "ENV": "DB_PASSWORD" },
    "database": { "ENV": "DB_DATABASE" }
  },
  "prod": {
    "driver": "pg",
    "host": { "ENV": "DB_HOST" },
    "port": 5432,
    "user": { "ENV": "DB_USER" },
    "password": { "ENV": "DB_PASSWORD" },
    "database": { "ENV": "DB_DATABASE" },
    "ssl": true
  }
}
